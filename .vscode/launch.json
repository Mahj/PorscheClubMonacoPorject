    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run android|ios on device|emulator",
            "type": "cordova",
            "request": "launch",
            "platform": "android|ios",
            "target": "device|emulator",
            "sourceMaps": true,
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Lancer le programme",
            "program": "${workspaceFolder}/src/pages/calendar/calendar.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}